<footer>
  <div class="site_link">
    <ul>
      <li> <%= link_to("Home", "/") %> </li>
      <li> <%= link_to("Opere", "/opere.html") %> </li>
      <li> <%= link_to("Biografia", "/biografia.html") %> </li>
      <li> <%= link_to("Contatti", "/contatti.html") %> </li>
      <li>
        <a href="https://www.facebook.com/sebastian.degobbis.artist">Facebook</a>
        <a href="https://plus.google.com/112598431490420206575">G+</a>
      </li>
    </ul>
  </div>
  <div class="form-contacts">
    <% form_tag '/contacts.rb', :method => 'post' do %>
      <% field_set_tag do %>
        <p>
          <%= label_tag :name %>
          <%= text_field_tag :name %>
        </p>
        <p>
          <%= label_tag :mail %>
          <%= text_field_tag :mail %>
        </p>
        <p>
          <%= label_tag :telephone %>
          <%= text_field_tag :telephone %>
        </p>
        <p>
          <%= label_tag :message %>
          <%= text_area_tag :message %>
        </p>
      <% end %>
      <% field_set_tag(:class => 'buttons') do %>
        <%= submit_tag "Invia" %>
      <% end %>
    <% end %>
  </div>
</footer>
